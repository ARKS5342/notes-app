<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
</head>
<body>
  <!-- Logout Button -->
  <a href="/logout" style="position: absolute; top: 20px; right: 20px; background: #e74c3c; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px;">
    Logout
  </a>

  <h1>Your Notes</h1>

  <% if (notes.length === 0) { %>
    <p>No notes yet</p>
  <% } else { %>
    <ul>
      <% notes.forEach(note => { %>
        <li>
          <strong><%= note.title %></strong>: <%= note.content %>
          <a href="/edit/<%= note._id %>">Edit</a>
          <form action="/delete/<%= note._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <h2>Add a New Note</h2>
  <form action="/add" method="POST">
    <input type="text" name="title" placeholder="Note Title" required><br><br>
    <textarea name="content" placeholder="Note Content" rows="4" cols="50" required></textarea><br><br>
    <button type="submit">Add Note</button>
  </form>
</body>
</html>
